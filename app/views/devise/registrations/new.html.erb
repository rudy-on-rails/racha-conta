<h1>Seja bem-vindo(a)</h1>
<p class="lead">Por favor, faça seu cadastro abaixo:</p>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name, token: params[:token])) do |f| %>
  <div class="form-group <%= resource.errors[:name].any? ? "has-error" : "" %>">
  	<%= f.label :name, "Nome" %>
  	<label class="control-label" for="inputError"><%= resource.errors[:name].first %></label>
  	<%= f.text_field :name, :autofocus => true, :class => "form-control" %>
  </div>
	  <div class="form-group  <%= resource.errors[:email].any? ? "has-error" : "" %>">
	  	<%= f.label :email, "E-mail" %>
	  	<label class="control-label" for="inputError"><%= resource.errors[:email].first %></label>
  	<% if @account_share %>
  		<%= f.email_field :email, :autofocus => true, :class => "form-control", :disabled => "disabled" %>
	  <% else %>
	  	<%= f.email_field :email, :autofocus => true, :class => "form-control" %>
		<% end %>
	  </div>

  <div class="form-group  <%= resource.errors[:password].any? ? "has-error" : "" %>">
  	<%= f.label :password, "Senha" %>
  	<label class="control-label" for="inputError"><%= resource.errors[:password].first %></label>
  	<%= f.password_field :password, :class => "form-control" %>
  </div>

  <div class="form-group  <%= resource.errors[:password_confirmation].any? ? "has-error" : "" %>">
  	<%= f.label :password_confirmation, "Confirmação de senha" %>
  	<label class="control-label" for="inputError"><%= resource.errors[:password_confirmation].first %></label>
    <%= f.password_field :password_confirmation, :class => "form-control" %>
  </div>

  <button type="submit" class="btn btn-primary btn-block">Cadastrar-me</button>
<% end %>
